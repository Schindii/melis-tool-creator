        var id = $(this).data("id");
        var dataString = $("form#moduleTplForm").serializeArray();

        dataString.push({
            name: "#TCPKEY",
            value: id
        });

#TCSAVELANG

        dataString = $.param(dataString);

        $.ajax({
            type        : 'POST',
            url         : '/melis/ModuleTpl/Properties/save',
            data		: dataString,
            dataType    : 'json',
            encode		: true
        }).done(function(data){
            if(data.success){
                // Notifications
                melisHelper.melisOkNotification(data.textTitle, data.textMessage);

                $("#id_moduletpl_modal_container").modal("hide");
                melisHelper.zoneReload("id_moduletpl_content", "moduletpl_content");
            }else{
                melisHelper.melisKoNotification(data.textTitle, data.textMessage, data.errors);
                melisHelper.highlightMultiErrors(data.success, data.errors, "#id_moduletpl_modal");
            }

            btn.attr('disabled', false);

        }).fail(function(){
            alert( translations.tr_meliscore_error_message );
        });